<%-include("./head.ejs") %>

<body>
	<% if (!success) { %>
		<div class="alert">
			<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
			<strong>An error occured!</strong> Name is taken
		</div>
		<% } %>
    <div class="join-container">
        <header class="join-header">
            <h1><i class="fas fa-smile"></i> ChatCord</h1>
        </header>
        <main class="join-main">
            <form action="" method="POST" name="forma">
                <div class="form-control" name="controla">
                    <label for="name">Name of your room</label>
                    <input type="text" name="name" id="name" placeholder="Enter room name..." required />

                    <div class="form-control">

                    </div>
                </div>

                <button type="submit" class="btn">Register new room</button>
                <button class="btn" onclick="window.history.back()">Back to Chat</button>
            </form>


        </main>
    </div>
</body>

</html>